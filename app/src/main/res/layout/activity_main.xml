<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

      android:background="@color/whitecolor">

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/layout_top">
        <android.support.v4.view.ViewPager
            android:id="@+id/sdvImage"
            android:layout_width="match_parent"
            android:layout_height="190dp" />

        <LinearLayout android:layout_height="60dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/sdvImage"
            android:background="@color/blackcolor"
            android:padding="2dp"
            android:id="@+id/layout_black">
            <ImageView android:layout_height="40dp"
                android:layout_width="40dp"
                android:background="@drawable/play_button">
            </ImageView>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <TextView android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="It is a long established fact"
                    android:textColor="@color/whitecolor"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="dummy text of"
                    android:textColor="@color/whitecolor"
                    android:textSize="11dp"
                    android:textStyle="bold"/>
                <LinearLayout android:layout_height="20dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="5dp">
                    <ImageView android:id="@+id/img1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/circle_outline"
                        android:layout_margin="5dp"/>
                    <ImageView android:id="@+id/img2"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/circle_outline"
                        android:layout_margin="5dp"/>
                    <ImageView android:id="@+id/img3"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/circle_outline"
                        android:layout_margin="5dp"/>
                    <ImageView android:id="@+id/img4"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/circle_outline"
                        android:layout_margin="5dp"/>
                    <ImageView android:id="@+id/img5"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/circle_outline"
                        android:layout_margin="5dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        <LinearLayout android:id="@+id/middel_layout"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/layout_black"
            android:weightSum="3"
            android:padding="3dp">
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/play_button_orange"/>
            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/image"/>
            </LinearLayout>
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/play_button_gray"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


        </android.support.v7.widget.CardView>





</RelativeLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/activity_main">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_id"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    </RelativeLayout>